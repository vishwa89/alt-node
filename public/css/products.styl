#products
  li
    position: relaltive
    .product-cover
      width 100%
    .tag
      position: absolute
      left: 0
      bottom: 0
      width: 95%
      height 140px
      margin: 0 auto
      margin-bottom -10px
      .tag-trigger
        display table-cell
        height 120px
        width 33.33%
        vertical-align middle
        text-align center
        cursor pointer
      .tag_info
        background-color rgb(255, 255, 255)
        border 1px solid #ebebeb
        border-radius 3px
        display block
        font 700 1em/1.2 'PT Sans'
        color #000
        padding 15px
        text-decoration underline
        .small_button
          background-color rgb(179, 179, 179)
          border-radius 3px
          clear both
          color rgb(255, 255, 255)
          display block
          font-size 0.75em
          font-weight 300          
          line-height 1.38
          margin 10px 0 0 0
          text-align center
          border none
          width 90px
          &:hover
            transition all 0.6s ease
            background-color black
        img
          margin-top 8px
          margin-left 10px
          opacity 0.3
          &:hover
            transition all 0.6s ease
            opacity 1

        .shadow
          width 60%
          margin-top -20px
