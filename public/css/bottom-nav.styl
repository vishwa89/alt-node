#bottom-nav
  position fixed
  bottom 0
  left 0
  right 0
  z-index 1000
  background-color rgb(0, 0, 0)
  span
    display inline-block
    height 40px
    a
      color: rgb(160, 160, 160)
      font-size: 14px
      line-height: 1.38em
      font-weight: 900
      text-transform: uppercase
      text-align: center
      text-decoration: none
      display block
      padding 10px
      background: url('/images/navi_dot.png') -1px 14px no-repeat
      &:hover
        color: #fff
  span:first-child
  span.language
    a 
      background-image: none
  span.language
    border-left: 1px solid #666;

